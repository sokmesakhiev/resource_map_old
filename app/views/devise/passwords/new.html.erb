<%= devise_error_messages! :class => 'centered w30' %>

<div class="box centered w30">
    
<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <h2><%= t('views.devise.sessions.forgot_your_password')%></h2>
  
  <hr class="shadow"/>
  
  <div class="field w30">
    <%= f.label :email, t('views.devise.sessions.email') %>
    <%= f.email_field :email %>
  </div>

  <div class="actions">
    <button type="submit" class="white"><%= t('views.devise.sessions.send_me_reset_password_instruction')%></button>
  </div>
  
<% end %>

</div>