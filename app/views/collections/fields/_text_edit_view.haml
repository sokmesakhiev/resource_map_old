- if mobile
  - if single_editing_mode
    = ko_text_field_tag :value, hasfocus: true, event: {keydown: :keyPress, blur: :save}, attr: {id: "'text-input-' + code"}
  - else
    = ko_text_field_tag :value, html: {class: 'right w20'}, attr: {id: "'text-input-' + code"}
    .clear
- else
  - if single_editing_mode
    = ko_text_area_tag :value, html: {class: 'w25 text'}, hasfocus: true, event: {keydown: :keyPress, blur: :save}, css: { error: :error }, attr: {id: "'text-input-' + code"}
  - else
    = ko_text_area_tag :value, html: {class: 'right w20 text'}, css: {error: :error}, attr: {id: "'text-input-' + code"}
    .clear