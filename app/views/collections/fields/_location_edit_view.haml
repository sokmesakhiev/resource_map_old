- if single_editing_mode
  %select{ko(value: :value, options: :optionsUIIds, optionsText: 'function(o){return $data.labelFor(o)}', hasfocus: true, event: {change: :save, blur: :save}, attr: {id: "'select-one-input-' + code"})}
- else
  %select.right.w20{ko(value: :value, options: :locations, optionsCaption: "'(no value)'",optionsValue: 'function(o){return o.code}', optionsText: 'function(o){return o.name}', attr: {id: "'location-input-' + code"})}

  .clear