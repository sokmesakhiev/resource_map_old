!!!
%html{:manifest => "/application.manifest"}
  %head
    %title= application_name.titleize
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}/

    %script{src: "/assets/mobile.js", type: "text/javascript"}
    %script{src: "/assets/jquery.mobile-1.3.2.js", type: "text/javascript"}
    %script{:src => "http://maps.googleapis.com/maps/api/js?sensor=false"}

    %link{href: "/assets/jquery.mobile-1.3.2.css", media: "screen", rel: "stylesheet", type: "text/css"}
    %link{href: "/assets/mobile.css", media: "screen", rel: "stylesheet", type: "text/css"}

    %link{:href => "/images/favicon.ico", :rel => "shortcut icon", :type => "image/x-icon"}
    %body{ :onload => "initialize('#{language.code}')"}
    %div#flash_message{"style" => "display:none;", "data-role" => "popup"}
      = flash_message
    = yield
