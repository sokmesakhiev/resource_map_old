!!!
%html
  %head
    %title Resource Map Mobile
    %meta{:content => "width=device-width, initial-scale=1", :name => "viewport"}
    %link{:href => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.css", :rel => "stylesheet"}/
    %script{:src => "http://code.jquery.com/jquery-1.9.1.min.js"}
    %script{:src => "http://code.jquery.com/mobile/1.3.2/jquery.mobile-1.3.2.min.js"}
    :javascript 
      var jq = jQuery.noConflict();
    =javascript_include_tag "mobile"
    = csrf_meta_tag
  %body{ :onload => "prepareFlushMessage('#flash_message')"}
    %div
    %div{"data-role" => "page"}
      %div{:style => "text-align:center;"}
        = image_tag "resource_map.png", :alt => "logo", :style => "margin:0px auto;padding-top:30px;"
      %div#flash_message{"style" => "display:none;", "data-role" => "popup"}
        = flash_message
      %div{"data-role" => "content"} 
        = yield
