- if mobile
  - if single_editing_mode
    = ko_text_field_tag :value, hasfocus: true, event: {keydown: :keyPress, blur: :save}, html: { type: "email"}, attr: {id: "'email-input-' + code"}
  - else
    = ko_text_field_tag :value, html: {class: 'right w20', type: "email"}, attr: {id: "'email-input-' + code"}
    .clear
- else
  - if single_editing_mode
    = ko_text_field_tag :value, hasfocus: true, event: {keydown: :keyPress, blur: :save}, css: { error: :error }, html: { type: "email"}, attr: {id: "'email-input-' + code"}
  - else
    = ko_text_field_tag :value, html: {class: 'right w20', type: "email"}, css: {error: :error }, attr: {id: "'email-input-' + code", autofocus: :focus}
    .clear
