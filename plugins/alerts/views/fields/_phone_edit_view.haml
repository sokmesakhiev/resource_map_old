- if single_editing_mode
  %input{ ko(value: :value, valueUpdate: :afterkeydown, event: {keydown: :keyPress, blur: :save}, attr: {id: "'phone-input-' + code"}), type: :tel, placeholder: t('views.plugins.alerts.form.sample_phone_number')}
- else
  %input.right.w20{ ko(value: :value, attr: {id: "'phone-input-' + code"}), type: :tel, placeholder: t('views.plugins.alerts.form.sample_phone_number') }
  .clear
